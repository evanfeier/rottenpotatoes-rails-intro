-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get, id:'rating_form' do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, @chosen_ratings.include?(rating), id:"ratings_#{rating}"
  = submit_tag 'Refresh', id:'ratings_submit'

%table#movies
  %thead
    %tr
      %th{:class => ("hilite" if params[:sortby] == "title")}=link_to "Movie Title", movies_path(sortby:"title"), id:"title_header"
      %th Rating
      %th{:class => ("hilite" if params[:sortby] == "release_date")}=link_to "Release Data", movies_path(sortby:"release_date"), id:"release_date_header"
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
